<%- include ('partials/header') %>
<div style="height: 70%">
  <div
    class="row"
    style="
      width: 500px;
      height: 560px;
      background-color: #f5f5f5;
      position: relative;
      border-radius: 4px;
      right: 35%;
      left: 35%;
      top: 10%;
    "
  >
    <h1 style="text-align: center">SIGN UP</h1>
    <div style="width: 90%; margin: 25px auto">
      <form action="/register" method="POST">
        <div class="form-group">
          <div class="form-group">
            <i class="fa fa-user" aria-hidden="true"></i>
            <label>First Name:</label>
            <input
              class="form-control"
              type="text"
              name="firstName"
              placeholder="First Name"
              required
            />
          </div>
          <div class="form-group">
            <i class="fa fa-user" aria-hidden="true"></i>
            <label>Last Name:</label>
            <input
              class="form-control"
              type="text"
              name="lastName"
              placeholder="Last Name"
              required
            />
          </div>
          <div class="form-group">
            <i class="fa fa-envelope" aria-hidden="true"></i>
            <label>Email:</label>
            <input
              class="form-control"
              type="email"
              name="email"
              placeholder="john@doe.com"
              required
            />
          </div>
          <i class="fa fa-user" aria-hidden="true"></i>
          <label>User Name:</label>
          <input
            class="form-control"
            type="text"
            name="username"
            placeholder="User Name"
            required
          />
        </div>
        <div class="form-group">
          <i class="fa fa-key"></i>
          <label>Password:</label>
          <input
            class="form-control"
            type="password"
            name="password"
            placeholder="Password"
            required
          />
        </div>
        <div class="form-group text-center" style="margin-top: 2%">
          <input type="submit" value="Sign Up" class="btn btn-info" />
          <a href="/teachers" class="btn btn-info">Go Back</a>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include ('partials/footer') %>
